{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        //lib": ["es6", "es2016", "es2017", "esnext"],
        "lib": [
            "es2020",
            "ESNext.AsyncIterable"
        ],
        "skipLibCheck": true,
        "allowJs": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSourceMap": true,
        //"sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceRoot": "./src",
        "outDir": "./dist",
        "declaration": true
        //"moduleResolution": "Node"
    },
    "include": [
        "server.ts",
        "index.ts",
        "src",
        "src/test",
        //"typings"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}